<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_inicial"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="antonio.femxa.appfinal.InicialActivity"
    android:background="@drawable/pantallainicio"
    android:gravity="bottom" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="30dp">

        <Button
            android:layout_marginTop="15dp"
            android:background="@drawable/inicial_jugar"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:onClick="aJugar"
            android:id="@+id/botonjugar"
            android:layout_gravity="center_horizontal"
            android:text=" JUGAR"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:textColor="@android:color/background_light"
            android:textSize="24sp" />

        <Button
            android:id="@+id/botonsonido"
            android:background="@drawable/inicia_sonido"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:onClick="sonidoOnOff"
            android:layout_marginTop="15dp"
            tools:text=" SONIDO OFF"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="@android:color/background_light" />

        <Button
            android:gravity="center"
            android:id="@+id/botoncreditos"
            android:background="@drawable/inicial_creditos"
            android:layout_width="200dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:onClick="abrirCreditos"
            android:layout_marginTop="15dp"
            tools:text="  CRÃ‰DITOS"
            android:textSize="20sp"
            android:textColor="@android:color/background_light" />
    </LinearLayout>

</LinearLayout>

